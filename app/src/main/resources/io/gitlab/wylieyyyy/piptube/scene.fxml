<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.media.MediaView?>
<?import javafx.scene.shape.Rectangle?>

<?import io.gitlab.wylieyyyy.piptube.FXMLController?>


<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="io.gitlab.wylieyyyy.piptube.FXMLController"
      fillWidth="true" alignment="BOTTOM_CENTER">
   <children>
      <StackPane fx:id="videoArea" alignment="CENTER">
         <children>
            <Rectangle fill="black">
               <width><FXMLController fx:constant="BASE_WIDTH" /></width>
               <height><FXMLController fx:constant="BASE_HEIGHT" /></height>
            </Rectangle>
            <MediaView fx:id="videoView" />
            <Button fx:id="playButton" text="Play" />
         </children>
      </StackPane>
   </children>
</VBox>
